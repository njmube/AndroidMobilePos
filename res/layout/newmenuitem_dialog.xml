<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="3dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="3dip">
        <TextView
        android:id="@+id/item_name_lbl"
       	android:layout_weight="1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="15dip"
    	/>
        <EditText
         android:id="@+id/item_name"
         android:layout_weight="1"
         android:layout_width="0dip"
         android:layout_height="wrap_content"
         android:hint="Item Name"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="3dip">
        <TextView
        android:id="@+id/item_desc_lbl"
       	android:layout_weight="1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:text="Item Desc"
        android:textSize="15dip"
    	/>
        <EditText
            android:lines="5" 
            android:ellipsize="none"
             android:inputType="textMultiLine"
			android:scrollHorizontally="false" 
			android:layout_weight="1"
            android:id="@+id/item_desc"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:hint="item desc"
         />
    </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="3dip">
        <TextView
        android:id="@+id/item_category_lbl"
       	android:layout_weight="1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:text="Item Category"
        android:textSize="15dip"
    	/>
        <Spinner
            android:id="@+id/item_category_spinner"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
         />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="3dip">
        <TextView
        android:id="@+id/item_price_lbl"
       	android:layout_weight="1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:text="Item Price"
        android:textSize="15dip"
    	/>
        <EditText
            android:id="@+id/item_price"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Item Price"
         />
    </LinearLayout>

     <TextView
         android:id="@+id/item_image_lbl"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Item Image:"
         android:paddingBottom="10dip"
         android:textSize="15dip" />
    
    
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dip">
	    <ImageView
                 android:id="@+id/menuImage"
                 android:layout_weight="1"
                 android:layout_width="0dip"
                 android:layout_height="100dip"
                 android:src="@drawable/chole" />
         
         <LinearLayout
              android:layout_weight="1"
             android:layout_width="0dip"
             android:layout_height="wrap_content"
          	android:orientation="vertical"
          >
          	<Button
            android:id="@+id/takepicture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Take Picture"
             />
           <Button
            android:id="@+id/choosepicture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Choose Picture"
             />
         </LinearLayout>
    </LinearLayout>
    <Button
            android:id="@+id/submitmenu"
            android:layout_marginTop="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
             />
</LinearLayout>
